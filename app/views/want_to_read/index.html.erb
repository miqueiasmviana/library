<div class="bg-white mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-2xl lg:mx-0">
    <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"><%= t("messages.want_to_read") %></h2>
    <p class="mt-2 text-lg leading-8 text-gray-600"><%= t("messages.list_want") %></p>
  </div>

  <div class="grid grid-cols-2 gap-4 mt-8 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6">
    <% @want_to_reads.each do |want_to_read| %>
      <a href="<%= book_path(want_to_read) %>"> 
        <div class="flex flex-col items-center"> 
          <%= image_tag want_to_read.cover, size: "50x50", class: "block w-32 mx-auto mb-2" %> 
          <p class="text-sm text-center text-gray-800"><%= want_to_read.title %></p>
        </div>
      </a>
    <% end %>
  </div>
  <div class="flex justify-between items-center gap-4 mt-8 ">
    <%= link_to t("links.back"), root_path, class: "rounded-lg py-3 px-5 bg-white-600 text-black block font-medium border hover:bg-gray-100" %>
  </div>
</div>