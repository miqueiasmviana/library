<div>
  <h1>Books</h1>
  <%= link_to "New Type", new_book_current_path %>
  <div>
    <table>
      <thead>
        <tr>
          <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Current Type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @book_currents.each do |book_current| %>
          <tr>
            <td class="text-sm text-gray-900 font-light text-center whitespace-pre-wrap break-words"><%= book_current.current_type %></td>
            <td class="text-sm text-gray-900 font-light text-center whitespace-pre-wrap break-words"><%= link_to "Show", book_current %></td>
            <td class="text-sm text-gray-900 font-light text-center whitespace-pre-wrap break-words"><%= link_to "Edit", edit_book_current_path(book_current) %></td>
            <td class="text-sm text-gray-900 font-light text-center whitespace-pre-wrap break-words"><%= link_to "Delete", book_current %></td>
          </tr>
        <% end %>
      </tbody>
    </div>
  </table>
</div>