<h1>New Book</h1>

<%= form_with model: book do |form| %>
  <div>
    <%= form.label :cover %><br>
    <%= form.text_area :cover %>
    <% book.errors.full_messages_for(:cover).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div> 

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% book.errors.full_messages_for(:title).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
    <% book.errors.full_messages_for(:author).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
    <% book.errors.full_messages_for(:description).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div>
    <%= form.label :genre %><br>
    <%= form.text_field :genre %>
    <% book.errors.full_messages_for(:genre).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div>
    <%= form.label :publish_company %><br>
    <%= form.text_field :publish_company %>
    <% book.errors.full_messages_for(:publish_company).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div>
    <%= form.label :page %><br>
    <%= form.text_field :page %>
    <% book.errors.full_messages_for(:page).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div>
    <%= form.label :year_publish %><br>
    <%= form.text_field :year_publish %>
    <% book.errors.full_messages_for(:year_publish).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div>
    <%= form.submit %>
  </div> 
<% end %>