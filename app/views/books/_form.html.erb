<h1>New Book</h1>

<%= form_with model: book do |form| %>
  <div class="field">
    <%= form.label :cover %><br>
    <%= form.text_field :cover %>
    <% book.errors.full_messages_for(:cover).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div> 

  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% book.errors.full_messages_for(:title).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div class="field">
    <%= form.label :author %><br>
    <%= form.text_field :author %>
    <% book.errors.full_messages_for(:author).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_field :description %>
    <% book.errors.full_messages_for(:description).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div class="field">
    <%= form.label :genre %><br>
    <%= form.text_field :genre %>
    <% book.errors.full_messages_for(:genre).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div class="field">
    <%= form.label :publish_company %><br>
    <%= form.text_field :publish_company %>
    <% book.errors.full_messages_for(:publish_company).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div class="field">
    <%= form.label :page %><br>
    <%= form.text_field :page %>
    <% book.errors.full_messages_for(:page).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div> 

  <div class="field">
    <%= form.label :year_publish %><br>
    <%= form.text_field :year_publish %>
    <% book.errors.full_messages_for(:year_publish).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div>

  <div class="field px-3 py-3">
    <%= form.label :book_current_id %>
    <%= form.select("book_current_id", @book_current_options, {include_blank: t("messages.select") }) %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>